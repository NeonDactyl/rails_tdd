<article>
  <header>
    <h2><%= @movie.name %></h2>
  </header>
  <div>
    <h3>Description</h3>
    <p><%= truncate(@movie.description, length:40 , separator:' ') %></p>
    <h3>Rating</h3>
    <p><%= @movie.rating %></p>
    <h3>Release Date</h3>
    <p><%= "#{@movie.released_on} (#{time_ago_in_words(@movie.released_on)})" %></p>
    <h3>Box Office Gross</h3>
    <p><%= @movie.worldwide_gross %></p>
</div>
</article>

<%=  link_to "All Movies", movies_path %>
